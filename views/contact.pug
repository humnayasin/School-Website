extends layout.pug 
block scripts
    script
         include ../static/index.js
block style 
    style
            include ../static/style.css
            include ../static/contactstyle.css
block content
            h1  Contact Us
            div(id = "contactform")
                form(action="/contact" , method= 'post')
                    input(type="text",class= "input", name= "name" , placeholder="Enter your name here") 
                    input(type="email",class= "input", name= "email" , placeholder="Enter your email here") 
                    
                    input(type="number",class= "input", name= "number" , placeholder="Enter your Number here")
                    textarea(class= "input" name="message", cols="30", rows="10", placeholder="Enter your message here")
                    button(class = "btn") submit  